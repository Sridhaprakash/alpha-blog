
<table className="padding-table-columns">
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th colspan="3">Actions</th>
        </tr>
    </thead>
    
    <tbody>
        <% @articles.each do |article| %>
        <tr>
            <td style="padding:0 15px 0 15px;"><%= article.title %></td>
            <td style="padding:0 15px 0 15px;"><%= article.description %></td>
            <td style="padding:0 15px 0 15px;"><%= link_to 'Show', article_path(article) %></td>
            <% if logged_in? && (article.user == current_user || current_user.admin?) %>
                <td style="padding:0 15px 0 15px;"><%= link_to 'Edit', edit_article_path(article) %></td>
                <td style="padding:0 15px 0 15px;"><%= button_to 'Delete', article_path(article), method: :delete, :onclick=> "return confirm('Are you sure you want to delete this item?')" %></td>
            <% end %>
        </tr>
        <% end %>
    </tbody>
</table>
<% if logged_in? %>
    <p>
        <%= link_to 'Create new article', new_article_path %>
    </p>
<% end %>

