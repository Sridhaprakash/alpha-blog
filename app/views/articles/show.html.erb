<h1 style="font-size:200%;"> <strong> Showing article details By User: <%= @article.user.username %><h1> 
<p style="font-size:60%;"><strong>Title: </strong><%= @article.title %></p>
<p style="font-size:60%;"><strong>Description: </strong><%= @article.description %></p>

<% if logged_in? && (@article.user == current_user || current_user.admin?)  %>
    <%= link_to 'Edit', edit_article_path(@article), {style: 'font-size: 20pt;  color: blue' } %> 
    <%= button_to 'Delete', article_path(@article), method: :delete, :onclick=> "return confirm('Are you sure you want to delete this item?')"  %> 
<% end %>
<%= link_to 'Return to articles listing', articles_path, {style: 'font-size: 20pt;  color: blue' } %>
