<h1> Categories listing page</h1>

<table className="padding-table-columns">
    <thead>
        <tr>
            <th>Name</th>
        </tr>
    </thead>
    
    <tbody>
        <% @categories.each do |category| %>
        <tr>
            <td style="padding:0 15px 0 15px;"><%= category.name %></td>
            <td style="padding:0 15px 0 15px;"><%= pluralize(category.articles.count, "article") %></td>
            
            <% if logged_in?  %>
                <td style="padding:0 15px 0 15px;"><%= link_to 'Show', category_path(category) %></td>
                <% if current_user.admin? %>
                    <td style="padding:0 15px 0 15px;"><%= link_to 'Edit category', edit_category_path(category) %></td></br>
                    <td style="padding:0 15px 0 15px;"><%= button_to 'Delete', category_path(category), method: :delete, :onclick=> "return confirm('Are you sure you want to delete this account and all associate articles?')" %><td></br>             
                <% end %>
            <% end %>
        </tr>
        <% end %>
    </tbody>
</table>
<% if logged_in? %>
    <p>
        <%= link_to 'Create new category', new_category_path %>
    </p>
<% end %>


