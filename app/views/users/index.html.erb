<h1>ALPHA-BLOGERS</h1>
<table>
    <thead>
        <tr>
            <th>User Name</th>
            <th colspan="3">Actions</th>
        </tr>
    </thead>
    <tbody>
        <% @users.each do |user| %>
        <tr>
            <td><%= user.username %></td>
            <td><%= link_to 'View', user_path(user) %></td>
            <td><%= pluralize(user.articles.count, "article") %></td>
            <% if logged_in?  %>
                <% if user == current_user %>
                <td><%= link_to 'Edit profile', edit_user_path(user) %></td></br>
                <% end %>
                <% if current_user.admin? %>
                    <td><%= button_to 'Delete', user_path(user), method: :delete, :onclick=> "return confirm('Are you sure you want to delete this account and all associate articles?')" %><td></br>             
                <% end %>
            <% end %>
        </tr>
        <% end %>
    </tbody>
</table>






