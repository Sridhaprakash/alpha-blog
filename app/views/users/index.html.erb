<h1>ALPHA-BLOGERS</h1>

<table className="padding-table-columns">
    <thead>
        <tr>
            <th>User Name</th>
            <th colspan="3">Actions</th>
        </tr>
    </thead>
    <tbody>
        <% @users.each do |user| %>
        <tr>
            <td style="padding:0 15px 0 15px;"><%= user.username %></td>
            <td style="padding:0 15px 0 15px;"><%= pluralize(user.articles.count, "article") %></td>
            
            <% if logged_in?  %>
                <td style="padding:0 15px 0 15px;"><%= link_to 'Show', user_path(user) %></td>
                <% if user == current_user %>
                    <td style="padding:0 15px 0 15px;"><%= link_to 'Edit profile', edit_user_path(user) %></td></br>
                <% end %>
                <% if current_user.admin? %>
                    <td style="padding:0 15px 0 15px;"><%= button_to 'Delete', user_path(user), method: :delete, :onclick=> "return confirm('Are you sure you want to delete this account and all associate articles?')" %><td></br>             
                <% end %>
            <% end %>
        </tr>
        <% end %>
    </tbody>
</table>

    
    





