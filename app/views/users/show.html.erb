<h1 style="font-size:200%;"> <strong>Showing User details <h1>
<p style="font-size:60%;"><strong>Title: </strong><%= @user.username %></p>
<p style="font-size:60%;"><strong>Description: </strong><%= @user.email %></p>

<% if logged_in? && @user == current_user %>
    <p><%= link_to 'Edit profile', edit_user_path(@user), {style: 'font-size: 20pt;  color: blue' } %></p>   
    <%= button_to 'Delete', user_path(@user), method: :delete, :onclick=> "return confirm('Are you sure you want to delete this item?')"  %>            
    <%= render 'articles/article' %>
<% end %>
    


